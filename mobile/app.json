{
  "expo": {
    "name": "Obras Teccel",
    "slug": "obras-wise-mobile",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "obraswise",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.obraswise.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Este app precisa acessar a câmera para tirar fotos das obras.",
        "NSPhotoLibraryUsageDescription": "Este app precisa acessar suas fotos para selecionar imagens.",
        "NSLocationWhenInUseUsageDescription": "Este app precisa acessar sua localização para registrar o local das fotos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.obraswise.mobile",
      "versionCode": 2,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ],
      "config": {
        "googleMaps": {
          "apiKey": ""
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Este app precisa acessar suas fotos para selecionar imagens.",
          "cameraPermission": "Este app precisa acessar a câmera para tirar fotos das obras."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Este app precisa acessar sua localização para registrar o local das fotos."
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "79f84c84-1500-4d0b-9c3a-dd7678bcc002"
      }
    },
    "owner": "mateus.ai"
  }
}
